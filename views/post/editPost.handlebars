<div class="container">
	<h1 class="center text-muted" style="margin-bottom: 25px;">Edit Post</h1>
	<hr>

	<h1 class="center text-muted" id="spinner" style="display: none">
		<small><i class="fa fa-spinner"></i> Please Wait... </small>
	</h1>

	<form action="/editPost/{{post._id}}" method="POST" id="edit-form">

		<div class="centerform-group">
			<label for="title">Title</label>
			<input type="text" name="title" class="form-control" value="{{post.title}}" required>
		</div>

		<div class="form-group">
			<label for="body">Body</label>
			<textarea type="text" name="body" class="form-control" required>{{post.body}}</textarea>
		</div>

		<div class="form-group">
			<label for="status">Status</label>
			<select name="status" id="" class="form-control">
				<option value="public">Public</option>
				<option value="private">Private</option>
				<option value="friends">Friends</option>
			</select>
		</div>

		<div class="form-group">
			<input class="form-control-file" type="file" name="image" id="upload-input">
		</div>

		<div class="form-group form-check">
			<input class="form-check-input" type="checkbox" name="allowComments" id="checkbox" checked>
			<label for="checkbox">Allow Comments</label>
		</div>

		<div class="form-group">
			<button type="button" onclick="savePost()" class="btn btn-primary">Save</button>
		</div>

	</form>
</div>

<script>

	function savePost() {
		document.getElementById('spinner').style.display = 'block';
		document.getElementById('edit-form').style.display = 'none';
		setTimeout(function () {
			document.getElementById('edit-form').submit();
		}, 7000);
	}

</script>
