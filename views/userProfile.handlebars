<div class="row">

	<div class="col-sm-4">

		<div class="card" style="width: 18rem;">
			<img src="{{oneUser.image}}" class="card-img-top" alt="...">
			<div class="card-body center">

				<a href="/startChat/{{oneUser._id}}" class="btn btn-primary">
					<i class="fa fa-commenting"></i>
				</a>

				{{#if smile}}
				<a href="/deleteSmile/{{oneUser._id}}" class="btn btn-danger">
					<i class="fa fa-smile-o"></i>
				</a>
				{{else}}
				<a href="/sendSmile/{{oneUser._id}}" class="btn btn-outline-danger">
					<i class="fa fa-smile-o"></i>
				</a>
				{{/if}}

			</div>
		</div>

	</div>

	<div class="col-sm" id="profile-info">
		<h3>Profile</h3>
		<h5 class="card-title"><i class="fa fa-user"></i> {{oneUser.fullname}}</h5>
		<p class="card-text"><i class="fa fa-envelope"></i> {{oneUser.email}}</p>
		<p class="card-text"><i class="fa fa-mars"> {{oneUser.gender}} </i></p>
		<p class="card-text"><i class="fa fa-id-card"> {{oneUser.about}} </i></p>
		<br>
	</div>

</div>
